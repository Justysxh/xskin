			width="expanding"
			height="expanding"
			margin="5,5,5,5"
			text="(0,1) columnSpan=2"
			layoutRow="0"
			layoutColumn="1"
			layoutColumnSpan="2"
			skin="@skin/UIButton.xml"/>
		<UIButton
			width="expanding"
			height="expanding"
			margin="5,5,5,5"
			text="(0,3) rowSpan=2"
			layoutRow="0"
			layoutColumn="3"
			layoutRowSpan="2"
			skin="@skin/UIButton.xml"/>
			
		<UIButton
			width="expanding"
			height="expanding"
			margin="5,5,5,5"
			text="(1,0) columnSpan=3"
			layoutRow="1"
			layoutColumn="0"
			layoutColumnSpan="3"
			skin="@skin/UIButton.xml"/>
		<UIButton
			width="expanding"
			height="expanding"
			margin="5,5,5,5"
			text="(2,0) columnSpan=-1"
			layoutRow="2"
			layoutColumn="0"
			layoutColumnSpan="-1"
			skin="@skin/UIButton.xml"/>
		<UIButton
			width="expanding"
			height="expanding"
			margin="5,5,5,5"
