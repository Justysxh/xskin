	<UIBoxLayout
		id="page_uidialog"
		width="expanding"
		height="expanding"
		gravity="hcenter|vcenter">
		<UIButton
			id="test_dialog"
			width="preferred"
			height="preferred"
			text="Dialog"
			skin="@skin/UIButton.xml"/>
	</UIBoxLayout>
	
	</UICardLayout>
</UIBoxLayout>