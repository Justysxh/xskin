		height="preferred"
		direction="vertical"
		gravity="left|vcenter">
			<UICheckBox
				width="preferred"
				height="preferred"
				text="checkbox"
				skin="@skin/UICheckBox.xml"/>
			<UICheckBox
				width="preferred"
				height="preferred"
				text="disabled"
				enabled="false"
				skin="@skin/UICheckBox.xml"/>
		</UIBoxLayout>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uiimageview"
		width="expanding"
		height="expanding"
		gravity="hcenter|vcenter">
