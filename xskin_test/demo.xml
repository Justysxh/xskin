				height="preferred"
				borderVisible="true"
				borderColor="#FF0000"
				text="Group2:"
				margin="0,0,20,0"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="A"
				skin="@skin/UIRadioButton.xml"
				group="g2"
				checked="true"
				tooltip="group 'g2'"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="B"
				skin="@skin/UIRadioButton.xml"
				group="g2"
				tooltip="group 'g2'"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="C"
				skin="@skin/UIRadioButton.xml"
				group="g2"
				tooltip="group 'g2'"/>
		</UIBoxLayout>
		
		<UIBoxLayout
		width="expanding"
		height="preferred"
		direction="horizontal"
		gravity="right|vcenter">
			<UITextView
				width="preferred"
				height="preferred"
				borderVisible="true"
				borderColor="#FF0000"
				text="disabled:"
				enabled="false"
				margin="0,0,20,0"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="A"
				skin="@skin/UIRadioButton.xml"
				group="g3"
				checked="true"
				enabled="false"
				tooltip="group 'g3'"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="B"
				skin="@skin/UIRadioButton.xml"
				group="g3"
				enabled="false"
				tooltip="group 'g3'"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="C"
				skin="@skin/UIRadioButton.xml"
				group="g3"
				enabled="false"
				tooltip="group 'g3'"/>
