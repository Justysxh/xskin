			height="200"
			placeHolder="type your suggestion here!"
			multiline="true"
			font="simsun,24,bold|italic"
			skin="@skin/UIEditView.xml"
			tooltip="suggestion address here"/>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uicombobox"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter">
		<UIComboBox
			id="combo1"
