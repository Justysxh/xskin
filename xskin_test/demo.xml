			borderColor="#00FFFF"
			src="@image/testimg.bmp"
			scaleType="center"
			tooltip="center"/>
		<UIImageView
			width="200"
			height="200"
			margin="0,0,20,0"
			borderVisible="true"
			borderColor="#00FFFF"
			src="@image/testimg.bmp"
			scaleType="scale_fill"
			tooltip="scale_fill"/>
		<UIImageView
			width="200"
			height="200"
			margin="0,0,20,0"
			borderVisible="true"
			borderColor="#00FFFF"
			src="@image/testimg.bmp"
			scaleType="scale_fit"
			tooltip="scale_fit"/>
	</UIBoxLayout>
	
	<UIScrollView
		id="page_uiscrollview"
		width="expanding"
		height="expanding"
		hscroll:skin="@skin/HScrollBar.xml"
		vscroll:skin="@skin/VScrollBar.xml">
		<UIImageView
			width="1900"
			height="1200"
			src="@image/testjpg.jpg"
			scaleType="scale_fill"
			tooltip="scale_fit"
			borderVisible="true"
			borderColor="#00FF00"/>
	</UIScrollView>
	
	<UIBoxLayout
		id="page_uiprogressbar"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter">
		<UIProgressBar
			width="400"
			height="preferred"
			value="20"
			margin="0,0,0,20"
			skin="@skin/UIProgressBar.xml"/>
		<UIProgressBar
			width="400"
			height="20"
			value="60"
			textVisible="true"
			margin="0,0,0,20"
			skin="@skin/UIProgressBar.xml"/>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uislider"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter">
		<UISlider
			width="400"
			height="preferred"
			value="20"
			skin="@skin/UISlider.xml"
			margin="0,0,0,20"/>
		<UISlider
			width="400"
			height="preferred"
			value="20"
			enabled="false"
			skin="@skin/UISlider.xml"/>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uitextview"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter">
		<UITextView
			width="preferred"
			height="preferred"
			text="TextView"/>
		<UITextView
			width="preferred"
			height="preferred"
			text="TextView"
			textColor="#FF0000"/>
		<UITextView
			width="preferred"
			height="preferred"
			text="TextView"
			textColor="#FF00FF"/>
		<UITextView
			width="preferred"
			height="preferred"
			text="TextView"
			textColor="#FFF00"
			font="simsun,24,normal"/>
		<UITextView
			width="preferred"
			height="preferred"
			text="TextView"
			textColor="#FFF00"
			font="simsun,24,bold"/>
		<UITextView
			width="preferred"
			height="preferred"
			text="TextView"
			textColor="#FFF00"
			font="simsun,24,italic"/>
		<UITextView
			width="300"
			height="100"
			textColor="#00F0FF"
			text="噫吁嚱， 危乎高哉！ 蜀道之难， 难于上青天！ 蚕丛及鱼凫， 开国何茫然！ 尔来四万八千岁， 不与秦塞通人烟。 西当太白有鸟道， 可以横绝峨眉巅。 地崩山摧壮士死， 然后天梯石栈相钩连。 上有六龙回日之高标， 下有冲波逆折之回川。 黄鹤之飞尚不得过， 猿猱欲度愁攀援。 青泥何盘盘， 百步九折萦岩峦。 扪参历井仰胁息， 以手抚膺坐长叹。
问君西游何时还？ 畏途巉岩不可攀。 但见悲鸟号古木， 雄飞雌从绕林间。 又闻子规啼夜月， 愁空山。 蜀道之难， 难于上青天， 使人听此凋朱颜！ 连峰去天不盈尺， 枯松倒挂倚绝壁。 飞湍瀑流争喧豗， 砯崖转石万壑雷。 其险也如此， 嗟尔远道之人胡为乎来哉！
剑阁峥嵘而崔嵬， 一夫当关， 万夫莫开。 所守或匪亲， 化为狼与豺。 朝避猛虎， 夕避长蛇； 磨牙吮血， 杀人如麻。 锦城虽云乐， 不如早还家。 蜀道之难， 难于上青天， 侧身西望长咨嗟！"
			multiline="true"
			vscroll:skin="@skin/VScrollBar.xml"/>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uihyperlink"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter">
		<UIHyperlink
			width="preferred"
			height="preferred"
			text="Click Me!!!"
			textColor="#FF0000"
			font="simsun,24,underlined|italic"
			margin="0,0,0,20"/>
		<UIHyperlink
			width="preferred"
			height="preferred"
			text="Click Me!!!"
			textColor="#0000FF"
			font="simsun,24,underlined"/>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uieditview"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter">
		<UIEditView
			width="400"
			height="preferred"
			placeHolder="example@email.com"
			textColor="#FF0000"
			margin="0,0,0,20"
			skin="@skin/UIEditView.xml"
			tooltip="email address here"/>
		<UIEditView
			width="400"
			height="preferred"
			placeHolder="example@email.com"
			textColor="#00FF00"
			margin="0,0,0,20"
			font="simsun,36,BOLD"
			skin="@skin/UIEditView.xml"
			tooltip="email address here"/>
		<UIEditView
			width="400"
			height="preferred"
			placeHolder="password"
