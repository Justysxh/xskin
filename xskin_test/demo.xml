			skin="@skin/UIListView.xml"/>
		<UIListView
			id="list2"
			width="200"
			height="100"
			skin="@skin/UIListView.xml"
			margin="0,0,20,0"/>
		<UIListView
			id="list3"
			width="200"
			height="preferred"
			enabled="false"
			skin="@skin/UIListView.xml"/>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uianimation"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter">
		<UIButton
			id="btn_translate"
			width="120"
			height="80"
			text="Translate"
			skin="@skin/UIButton.xml"
			margin="0,0,0,40"/>
		<UIButton
			id="btn_alpha"
