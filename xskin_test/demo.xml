	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uiradiobutton"
		width="expanding"
		height="expanding"
		direction="vertical"
		gravity="hcenter|vcenter"
		padding="10,10,10,10">
		<UIBoxLayout
