			skin="@skin/UIComboBox.xml"
			margin="0,0,0,20"/>
		<UIComboBox
			id="combo3"
			width="200"
			height="preferred"
			skin="@skin/UIComboBox.xml"
			enabled="false"
			margin="0,0,0,20"/>
