			height="preferred"
			direction="horizontal"
			gravity="right|vcenter"
			margin="0,0,0,20">
			<UITextView
				width="preferred"
				height="preferred"
				borderVisible="true"
				borderColor="#FF0000"
				text="Group1:"
				margin="0,0,20,0"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="A"
				skin="@skin/UIRadioButton.xml"
				group="g1"
				checked="true"
				tooltip="group 'g1'"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="B"
				skin="@skin/UIRadioButton.xml"
				group="g1"
				tooltip="group 'g1'"/>
			<UIRadioButton
				width="preferred"
				height="preferred"
				text="C"
				skin="@skin/UIRadioButton.xml"
				group="g1"
				tooltip="group 'g1'"/>
		</UIBoxLayout>
		
		<UIBoxLayout
		width="expanding"
		height="preferred"
		direction="horizontal"
		gravity="right|vcenter"
		margin="0,0,0,20">
