	width="expanding"
	height="expanding"
	bkImage="#f3fbff">
	<UIBoxLayout
		id="page_uibutton"
		width="expanding"
		height="expanding"
		direction="horizontal"
		gravity="hcenter|vcenter"
		padding="10,10,10,10">
		<UIButton
			width="120"
			height="preferred"
			text="Button"
			margin="0,0,20,0"
			skin="@skin/UIButton.xml"/>
		<UIButton
			width="120"
			height="preferred"
			text="Disabled"
			enabled="false"
			skin="@skin/UIButton.xml"/>
	</UIBoxLayout>
	
	<UIBoxLayout
		id="page_uiimagebutton"
		width="expanding"
		height="expanding"
		direction="horizontal"
		gravity="hcenter|vcenter"
		padding="10,10,10,10">
		<UIImageButton
			width="preferred"
			height="preferred"
			text="ImageButton"
			icon="@image/testimg.bmp"
			margin="0,0,20,0"
			skin="@skin/UIButton.xml"/>
		<UIImageButton
			width="preferred"
			height="preferred"
			text="Disabled"
			icon="@image/testimg.bmp"
			skin="@skin/UIButton.xml"
